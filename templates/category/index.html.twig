{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="row">
        <a href="{{ path('app_category_create') }}" class="btn btn-success">New Category</a>
    </div>
    {% for category in categories %}
        <div class="row border border-dark">
            <h3>{{ category.name }}</h3>
        </div>
    {% endfor %}
{% endblock %}