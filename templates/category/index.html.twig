{% extends 'base.html.twig' %}

{% block title %}Page de création de catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row mb-3">
            <div class="col-12">
                <a href="{{ path('app_create') }}" class="btn btn-success">Nouvelle catégorie</a>
            </div>
        </div>
        {% for category in categories %}
            <div class="row mb-3 border rounded bg-light">
                <div class="d-flex justify-content-between col-12 py-3">
                    <h3 class="text-center text-primary">{{ category.name }}</h3>
                    <div>
                        <a href="{{ path('delete_category', {'id': category.id}) }}" class="btn btn-danger ms-2">Supprimer</a>
                        <a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-warning ms-2">Éditer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
