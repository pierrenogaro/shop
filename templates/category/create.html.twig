{% extends 'base.html.twig' %}

{% block title %}Création de catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Créer une nouvelle catégorie</h3>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                {{ form_start(form) }}
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                <button type="submit" class="btn btn-success">Créer</button>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <a href="{{ path('app_category') }}" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
