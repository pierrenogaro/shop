{% extends 'base.html.twig' %}

{% block title %}Hello FormController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center">{{ btnValue }}</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            <label for="{{ form.cardNumber.vars.id }}" class="form-label">Num√©ro de carte</label>
                            {{ form_widget(form.cardNumber, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.cardNumber) }}
                        </div>

                        <button type="submit" class="btn btn-success btn-block">{{ btnValue }}</button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
